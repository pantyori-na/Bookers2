
<div class='body'>
  <div class='container'>
    <p id="notice"></p>
    <div class="row">
      <h2>Sign up</h2>
    </div>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div class="row mt-5">
          <label for="user_name">Name</label><br />
          <%= f.text_field :name, autofocus: true, class:"name", id:"inputName" %>
        </div>

        <div class="row mt-5">
          <label for="user_email">Email</label><br />
          <%= f.email_field :email, class:"emaill", id:"inputEmail" %>
        </div>

        <div class="row mt-5">
          <label for="user_password">Password</label>
          <em>(6 characters minimum)</em>
          <br />
          <%= f.password_field :password, autocomplete: "off", class:"password", id:"inputPassword" %>
        </div>

        <div class="row mt-5">
          <label for="user_password_confirmation">Password confirmation</label><br />
          <%= f.password_field :password_confirmation, autocomplete: "off", class:"password_confirm", id:"inputConfirmPassword" %>
        </div>

        <div class="row mt-5">
          <%= f.submit "Sign up", class:"btn btn-success mt-5" %>
        </div>
        <% end %>
        <!--  </form> -->
        <div class="row">
          <a href="/users/sign_in">Log in</a>
        </div>
      </div>
    </div>













