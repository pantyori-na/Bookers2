	<div class='body'>
		<div class='container'>
					<!-- error message -->
			<% if @user.errors.any? %>
			<div id="error_explanation">
				<font color="red">
					<h2><%= @user.errors.count %>errors prohibited this obj from being saved:</h2>
					<ul>
						<% @user.errors.full_messages.each do |message| %>
						<li><%= message %></li>
						<% end %>
					</ul>
				</font>
			</div>
			<% end %>
			<!-- error message end -->
			<div class="row">
				<h2>User info</h2>
			</div>

			<%= form_for(@user) do |f| %>
			<div class="row">
				<label>Name</label>
				<%= f.text_field :name %>
			</div>
			<div class="row">
				<label>Image</label>
				<%= f.attachment_field :profile_image %>
			</div>
			<div class="row">
				<div class="col-xs-2">
					<label>introduction</label>
					<%= f.text_area :introduction %>
				</div>
			</div>
			<div class="actions col-xs-2">
				<%= f.submit do %>
				<button type="button" class="btn btn-default">Update User</button>
				<% end %>
			</div>
			<% end %>
		</div>
	</div>
