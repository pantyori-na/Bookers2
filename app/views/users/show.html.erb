 <div class='body'>
  		<div class='container'>
  			<p id="notice"></p>
  			<div class='row'>
  				<div class='col-xs-3'>
  					<h2>User info</h2>
  					<table class='table'>
  						<tr>
  							<%= attachment_image_tag book.user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
  						</tr>
  						<tr>
  							<th>name</th>
  							<th><%= @user.name %></th>
  						</tr>
  						<tr>
  							<th>introduction</th>
  							<th>＝テーブル追加必要＝</th>
  						</tr>
  					</table>
            <!-- 左側 -->
  					<div class='row'>
              <%= link_to edit_user_path(current_user.id) do %>
              <div class="col-xs-12 btn btn-default glyphicon glyphicon-wrench"></div>
              <% end %>
  					</div>

  					<h2>New book</h2>

  					<%= form_for(@book, url: books_path) do |f| %>
  					<% if @book.errors.any? %>
  					<div id="error_explanation">
  						<h2><%= @book.errors.count %>件のエラーが発生しました。</h2>
  						<ul>
  							<% @book.errors.full_messages.each do |message| %>
  							<li><%= message %></li>
  							<% end %>
  						</ul>
  					</div>
  					<% end %>
  					<div class="row">
  						<label>Title</label>
  						<%= f.text_field :title, class:"form-control", placeholder:"title" %>
  					</div>
  					<div class="row">
  						<label>Opinion</label>
  						<%= f.text_area :body, class:"form-control", rows:"3", placeholder:"Opinion" %>
  					</div>
  					<div class="row mt-5">
  						<%= f.submit "CREATE BOOK", class:"btn btn-primary form-control" %>
  					</div>
  					<% end %>
  				</div>

			<div class='col-xs-9'>
				<h2>Books</h2>

				<table class='table table-hover table-inverse'>
					<thead>
						<tr>
							<th></th>
							<th>Title</th>
							<th>Opinion</th>
							<th colspan="3"></th>
						</tr>
					</thead>

					<tbody>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>




