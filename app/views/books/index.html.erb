  	<div class='body'>
  		<div class='container'>
  			<p id="notice"></p>
  			<div class='row'>
  				<div class='col-xs-3'>
  					<h2>User info</h2>
  					<table class='table'>
  						<tr><img class="" alt="No image" /></tr>
  						<tr>
  							<th>name</th>
  							<th>aaa</th>
  						</tr>
  						<tr>
  							<th>introduction</th>
  							<th></th>
  						</tr>
  					</table>

  					<div class='row'>
  						<a class="col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_7343" href="/users/7343/edit"></a>
  					</div>

  					<h2>New book</h2>

  					<%= form_for(@book, url: books_path) do |f| %>
  					<% if @book.errors.any? %>
  					<div id="error_explanation">
  						<h2><%= @book.errors.count %>件のエラーが発生しました。</h2>
  						<ul>
  							<% @book.errors.full_messages.each do |message| %>
  							<li><%= message %></li>
  							<% end %>
  						</ul>
  					</div>
  					<% end %>
  					<div class="field row">
  						<label>Title</label>
  						<%= f.text_field :title, class:"form-control" %>
  					</div>
  					<div class="field row">
  						<label>Opinion</label>
  						<%= f.text_area :body, class:"form-control", rows:"3" %>
  					</div>
  					<div class="field row mt-5">
  						<%= f.submit "CREATE BOOK", class:"btn btn-primary form-control" %>
  					</div>
  					<% end %>
  				</div>

  				<!-- ここから右側本体 -->
  				<div class='col-xs-9'>
  					<h2>Books</h2>

  					<table class='table table-hover'>
  						<thead>
  							<tr>
  								<th></th>
  								<th>Title</th>
  								<th>Opinion</th>
  								<th colspan="3"></th>
  							</tr>
  						</thead>

  						<tbody>
  							<% @books.each do |book| %>
  							<tr>
  								<td>
  									<%= link_to root_path do %>
  									image
  								</td>
  								<% end %>
  								<td>
  									<%= link_to book_path(book) do %>
  									<%= book.title %>
  								</td>
  								<% end %>
  								<td><%= book.body %></td>
  							</tr>
  							<% end %>
  						</tbody>
  					</table>
  				</div>
  			</div>

  		</div>
  	</div>

