	<div class='body'>
		<div class='container'>
			<!-- error message -->
			<% if @book.errors.any? %>
			<div id="error_explanation">
				<font color="red">
					<h2><%= @book.errors.count %>errors prohibited this obj from being saved:</h2>
					<ul>
						<% @book.errors.full_messages.each do |message| %>
						<li><%= message %></li>
						<% end %>
					</ul>
				</font>
			</div>
			<% end %>
			<!-- error message end -->
			<div class='row'>
				<div class='col-md-6 col-md-offset-3'>
					<h1>Editing Book</h1>
					<%= form_for(@book) do |f| %>
					<div class="row">
						<label>Title</label>
						<%= f.text_field :title, class:"col-sm-12"%>
					</div>
					<div class="row">
						<label>Opinion</label>
						<%= f.text_area :body, class:"col-sm-12" %>
					</div>
					<div class="row">
						<%= f.submit "Update Book", class:"btn btn-primary form-control mt-5 col-sm-12" %>
						<% end %>
					</div>
					<%= link_to book_path(@book) do %>Show<% end %> |
					<%= link_to books_path do %> Back <% end %>
				</div>
				<div class='col-md-3'></div>
			</div>
		</div>
	</div>