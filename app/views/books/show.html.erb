  	<%= render 'books/list', books: @books, book_new: @book_new ,user: @user %>

  	<!-- ここから右側本体 -->
  	<div class='col-xs-9'>
  		<h2>Book detail</h2>
  		<table class='table'>
  			<tr>
  				<td>
  					<%= attachment_image_tag @book.user, :profile_image,　format: 'jpeg', fallback: "no_image.jpg", size: "50x50" %><br>
  					<%= @book.user.name %>
  				</td>
  				<%= link_to user_path(@book.user.id) do %>
  				<td><%= @book.title%></td>
  				<td><%= @book.body%>

  					<!-- ログインしているユーザーなら消せる -->
  					<% if @book.user == current_user %>
  					<%= link_to "Edit", edit_book_path(@book) %>
  					<%= link_to "Destroy", book_path(@book), method: :delete %>
  					<% end %>
  					<!-- ログイン中のみ -->

  				<% end %>
  				</td>
  			</tr>
  		</table>
  	</div>
  </div>
</div>
</div>


