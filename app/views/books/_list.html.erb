 <!-- 共通部分 -->
  <div class='body'>
    <div class='container'>
      <!-- error message -->
      <% if book_new.errors.any? %>
      <div id="error_explanation">
        <font color="red">
          <h2><%= book_new.errors.count %>errors prohibited this obj from being saved:</h2>
          <ul>
            <% book_new.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
          </ul>
        </font>
      </div>
      <% end %>
      <!-- error message end -->
      <div class='row'>
        <div class='col-xs-3'>
         <h2>User info</h2>
         <table class='table'>
          <tr>
          <%= attachment_image_tag current_user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
         </tr>
         <tr>
           <th>name</th>
           <th><%= current_user.name %></th>
         </tr>
         <tr>
           <th>introduction</th>
           <th><%= current_user.introduction %></th>
         </tr>
       </table>

       <div class='row'>
         <%= link_to edit_user_path(current_user.id) do %>
         <div class="col-xs-12 btn btn-default glyphicon glyphicon-wrench"></div>
         <% end %>
       </div>

       <h2>New book</h2>

       <%= form_for(book_new, url: books_path) do |f| %>
       <div class="row">
        <label>Title</label>
        <%= f.text_field :title, class:"form-control" %>
      </div>
      <div class="row">
        <label>Opinion</label>
        <%= f.text_area :body, class:"form-control", rows:"3" %>
      </div>
      <div class="row mt-5">
        <%= f.submit "CREATE BOOK", class:"btn btn-primary form-control" %>
      </div>
      <% end %>
    </div>
    <!-- 共通部分 -->